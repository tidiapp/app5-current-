<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>FuncPage</title>

    <!-- WinJS references -->
    <link href="//Microsoft.WinJS.2.0/css/ui-light.css" rel="stylesheet" />
    
    <script src="//Microsoft.WinJS.2.0/js/base.js"></script>
    <script src="//Microsoft.WinJS.2.0/js/ui.js"></script>

    <link href="/css/default.css" rel="stylesheet" />

    <link href="/pages/func/func.css" rel="stylesheet" />
    <!--<script src="https://thinkitdrinkit.azure-mobile.net/client/MobileServices.Web-1.0.0.min.js"></script>-->
    <script src="/pages/func/func.js"></script>
    <script src="/js/gatherInfo.js"></script>
    <script src="/js/dataBaseGather.js"></script>
</head>
<body>
    <!-- The content that will be loaded and displayed. -->
    <div class="fragment homepage">
        <header id="home_header" aria-label="Header content" role="banner">
            <!--<h1 id="header_me" class="titlearea win-type-ellipsis"></h1>-->
            <button data-win-control="WinJS.UI.BackButton"></button> 
            <h1 id="choosen_func" class="titlearea win-type-ellipsis"></h1>
        </header>
        <section id="home_content" aria-label="Main content" role="main">

            <div class="users_func_template" data-win-control="WinJS.Binding.Template">
                <div onclick="clicked_me.clicked(event.srcElement.innerText);" id="func_display">
                    <img class="func_bg" data-win-bind="src: img" />
                    <h2 id="user_func" data-win-bind="textContent: func"></h2>
                </div>
            </div><!-- ends user_func_template -->

            <div id="func_template_placement" data-win-control="WinJS.UI.ListView" data-win-bind="winControl.itemDataSource: func.dataSource" data-win-options="{
                    itemTemplate: select ('.users_func_template'),
                    selectionMode: 'none'
                }"></div><!-- this div is populating the div above (user_func_template) -->

            <div id="func_info_template" data-win-control="WinJS.Binding.Template">
                    <img id="sel_func_pic" class="info_pic" data-win-bind="src: info_img" />
                    <button id="info_btn" name="sel_btn" onclick="clicked_me.more_info(document.getElementById('sel_func_name').textContent)" type="submit">Learn More</button>
                    <button onclick=" clicked_me.next_page()" id="sel_btn" name="sel_btn" type="submit">Choose This Function</button>
                   <h2 id="sel_func_name" class="sel_func_name_class" data-win-bind="textContent: info_name"></h2>
                    <p id="info_text" data-win-bind="textContent: the_info"></p>
            </div>

            <div id="info_template_placement" data-win-control="WinJS.UI.ListView" data-win-bind="winControl.itemDataSource: info.dataSource" data-win-options="{
                itemTemplate: select ('#func_info_template'),
                selectionMode: 'none'
                }"></div>
        </section>

        <footer id="main_footer">
            <div id="func_div">
                <p id="func_p"></p>
                <img id="func_pic" alt="This is a test" onclick="WinJS.Navigation.back(1)" src="#" width="115" height="90" />
            </div>
            <h2 id="where_you_are"></h2>
            <h1 id="footer_company_name" class="print_charm"></h1><!-- this is being styled in the default.js folder -->
        </footer>
    </div>
</body>
</html>
