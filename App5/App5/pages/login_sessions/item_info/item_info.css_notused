.item_info section[role=main] {
    margin-left: 120px;
    margin-right: 120px;
}#item_info_pic{
     width: 220px;
     height: 220px;
     border: 3px solid;
     float: left;
     margin-right: 10px;
}#item_info1{
    width: 1100px;
    height: 500px;
    overflow-y: scroll;
}#item_info_placement{
    height: auto;
}#item_info_label{
    float: left;
    clear: both;
    width: 226px;
    margin-top: 10px;
    margin-right: 10px;
}#item_info_info,#item_info_info2,#item_info_info3{
    font-size: 13px;
    text-align: justify;
    margin-left: 10px;
    margin-top: 20px;
    line-height: 25px;
    text-indent: 30px;
    width: 1000px;
    font-weight: 500;
}#item_info_placement{
     margin-left: -90px;
}#item_info_header{
     margin-top: -30px;
}
